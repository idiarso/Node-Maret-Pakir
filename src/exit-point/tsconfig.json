{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["node"]
  },
  "include": [
    "electron/**/*",
    "services/**/*",
    "controllers/**/*",
    "types/**/*",
    "__tests__/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 